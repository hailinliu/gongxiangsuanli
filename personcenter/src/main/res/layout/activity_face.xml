<?xml version="1.0" encoding="utf-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/lib_view"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@mipmap/person_shiming_bg"
            android:layout_height="210dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/include"
                    layout="@layout/personcenter_head"/>
            </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:paddingStart="50dp"
           android:paddingEnd="50dp"
           android:layout_height="wrap_content">
          <View
              android:layout_width="3dp"
              android:background="@drawable/lib_shape_corner12"
              android:layout_height="3dp"/>
           <View
               android:layout_width="0dp"
               android:layout_weight="1"
               android:background="@color/libTextWhite"
               android:layout_height="1dp"/>
           <View
               android:layout_width="3dp"
               android:background="@drawable/lib_shape_corner12"
               android:layout_height="3dp"/>
           <View
               android:layout_width="0dp"
               android:layout_weight="1"
               android:background="@color/lib_view"
               android:layout_height="1dp"/>
           <View
               android:layout_width="3dp"
               android:background="@drawable/lib_shape_corner12"
               android:layout_height="3dp"/>
       </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="身份认证"
                  android:textSize="10sp"
                  android:textColor="@color/lib_view"
                  android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="人脸识别"
                    android:textSize="10sp"
                    android:textColor="@color/lib_view"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="完结"
                    android:textSize="10sp"
                    android:gravity="end"
                    android:textColor="@color/lib_view"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="进行实名认证"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/lib_view"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="提升账户安全 使用户更放心"
                android:textSize="10sp"
                android:textColor="@color/lib_view"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="invisible"
            android:background="@drawable/lib_shape_corner1"
            android:layout_marginTop="30dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="姓名:"
                android:textColor="@color/lib_edit"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_pass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:hint="请输入真实姓名"
                android:textCursorDrawable="@null"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:textColorHint="@color/libTextGray"
                android:background="@null"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lib_shape_corner1"
            android:paddingBottom="5dp"
            android:visibility="invisible"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="身份证号:"
                android:textColor="@color/lib_edit"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_xin"
                android:layout_width="match_parent"
                android:layout_gravity="end"
                android:gravity="end"
                android:textCursorDrawable="@null"
                android:hint="请输入身份证号"
                android:paddingEnd="10dp"
                android:textColorHint="@color/libTextGray"
                android:background="@null"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:text="实体检测"
            android:textColor="@color/libTextWhite"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/lib_button"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</layout>

