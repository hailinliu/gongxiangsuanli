<?xml version="1.0" encoding="utf-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lib_view"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/include"
            layout="@layout/personcenter_head"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/ll_geren"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:background="@color/libTextWhite"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:text="个人资料"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:textColor="@color/lib_edit"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image_zi"
        android:layout_width="wrap_content"
        android:src="@mipmap/person_youjiantou"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/lib_view"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/ll_xiugai"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:background="@color/libTextWhite"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="修改登录密码"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:textColor="@color/lib_edit"
        android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image_xiu"
            android:layout_width="wrap_content"
            android:src="@mipmap/person_youjiantou"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_banben"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/libTextWhite"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="系统更新"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textColor="@color/lib_edit"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_banben"
            android:layout_width="wrap_content"
            android:text="1.0.0"
            android:textColor="@color/lib_edit"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image_banben"
            android:layout_width="wrap_content"
            android:src="@mipmap/person_youjiantou"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_tuichu"
        android:layout_width="match_parent"
        android:text="退出登录"
        android:background="@drawable/lib_button"
        android:textStyle="bold"
        android:textColor="@color/libTextWhite"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="40dp"/>
</LinearLayout>
</LinearLayout>
</layout>