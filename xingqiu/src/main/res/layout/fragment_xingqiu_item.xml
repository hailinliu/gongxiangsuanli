<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/lib_shape_corner1"
    android:orientation="vertical"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
 <View
     android:layout_width="20dp"
     android:background="@drawable/lib_shape_corner11"
     android:layout_gravity="center"
     android:layout_height="20dp"/>
   <TextView
       android:id="@+id/tv_name"
       android:layout_width="wrap_content"
       android:text="V1积分池"
       android:textColor="@color/libTextBlack"
       android:layout_marginStart="10dp"
       android:layout_height="wrap_content"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
       <TextView
           android:layout_width="0dp"
           android:layout_weight="1"
           android:text="价值(scpc)"
           android:textColor="@color/libTextBlack"
           android:textSize="12sp"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text="预计总收益(scpc)"
            android:textColor="@color/libTextBlack"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="每日收益"
            android:textColor="@color/libTextBlack"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="运行周期"
            android:textColor="@color/libTextBlack"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2000"
            android:textColor="@color/libTextBlack"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_zong"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text="6000"
            android:textColor="@color/libTextBlack"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_meiri"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0.2%"
            android:textColor="@color/libTextBlack"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_period"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="30天"
            android:textColor="@color/libTextBlack"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_gou"
        android:layout_width="match_parent"
        android:text="兑换"
        android:textColor="@color/libTextWhite"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/lib_button"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"/>
</LinearLayout>
</LinearLayout>
