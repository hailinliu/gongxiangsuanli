<?xml version="1.0" encoding="utf-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lib_view"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/login_you"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="忘记密码"
                android:textColor="@color/lib_edit"
                android:textSize="@dimen/register_biao"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/login_phone"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:textColor="@color/lib_edit"
                    android:layout_marginStart="10dp"
                    android:hint="请输入您的手机号"
                    android:textCursorDrawable="@null"
                    android:textColorHint="#999999"
                    
                    android:background="@null"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/lib_view"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/login_register_yanzheng"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_yanzheng"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/lib_edit"
                    android:textColorHint="#999999"
                    android:hint="请输入您的验证码"
                    android:textCursorDrawable="@null"
                    
                    android:background="@null"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:text="获取"
                    android:textColor="@color/lib_tv_yixuan"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/libTextWhite"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/login_pwd"
                    android:layout_gravity="center"
                    android:textColor="@color/libTextWhite"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="wrap_content"
                    android:hint="请设置新密码"
                    
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/lib_edit"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivSee1"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/login_pwd"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_pwd_again"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/lib_edit"
                    android:hint="请再次输入新密码"
                    android:textCursorDrawable="@null"
                    android:textColorHint="#999999"
                    android:layout_marginStart="10dp"
                    
                    android:background="@null"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/lib_view"
                android:layout_height="0.5dp"/>


            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:text="提交"
                android:textSize="@dimen/register_zhuce"
                android:background="@drawable/lib_button"
                android:textStyle="bold"
                android:textColor="@color/libTextWhite"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="40dp"/>
        </LinearLayout>

    </LinearLayout>
</layout>
